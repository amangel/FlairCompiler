program MakeTriangle (height : integer);
    var index : integer;
        ones  : integer;
    function firstHalf (h : integer) : integer
        var index : integer;
    begin
        i := 1;
        ones  := 1;
        while i <= h do
            begin
                print(ones);
                ones := ones * 10;
                ones := ones + 1;
                i := i + 1
            end;
        return i
    end;
    
    function bottomHalf (n : integer) : integer
    begin
        while n > 0 do
        begin
            ones := (ones - 1) / 10;
            print(ones);
            n := n - 1
        end;
        return index
    end;
    
begin
    ones  := 1;
    index := 1;
    index := firstHalf(height);
    index := bottomHalf(index)
end.
