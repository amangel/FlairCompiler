program cosine(x : real);
{ compute the cosine of x to within tolerance eps }
{ this algorithm uses an alternating series       }
{ adapted from Seth Bergmann's "Compiler Design"  }
var
   cos  : real;
   term : real;
   eps  : real;
   n    : real;
   alt  : real;
begin
   eps := 0.0001;
   n := 1;
   cos := 1;
   term := 1;
   alt := -1;
   while term > eps do
   begin
      term := term * x * x / n / (n+1);
      cos  := cos + alt * term;
      alt  := -alt;
      n    := n + 2
   end
end.